<!doctype html>
<html>
<head>
 <meta charset="utf-8" />
 <title>getJSON</title>
 <link rel="stylesheet" href="/default.css" />
 <script src="/js/jquery.min.js"></script>
 <script>
 $(()=>{
   $("#submit").click(()=>{
       $.getJSON("/Ajax/", {"text1":$("#text1").val()},
        (data)=>{
            $("#message").text(data['text1']);
        });
   });
 });
 </script>
</head>

<body>
 <h1>getJSON</h1>
 <div class="menubar"><a href="/">HOME</a></div>
 <br />
 <div style="margin-left:20%;">Enter Text <input type="text" id="text1" /> <input type="button" id="submit" value="submit" /></div>
 <br />
 <p class="message" id="message"></p>
</body>
</html>
